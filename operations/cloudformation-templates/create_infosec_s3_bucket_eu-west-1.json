{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Create Enterprise Information Security S3 Buckets in eu-west-1.",
  "Metadata":{
    "Source":"https://github.com/mozilla/security/tree/master/operations/cloudformation-templates"
  },
  "Resources":{
    "InfosecLambdaEuWest1":{
      "Type":"AWS::S3::Bucket",
      "Properties":{
        "BucketName":"infosec-lambda-eu-west-1"
      }
    },
    "InfosecLambdaEuWest1BucketPolicy":{
      "Type":"AWS::S3::BucketPolicy",
      "Properties":{
        "Bucket":{
          "Ref":"InfosecLambdaEuWest1"
        },
        "PolicyDocument":{
          "Version":"2012-10-17",
          "Statement":[
            {
              "Sid":"",
              "Effect":"Allow",
              "Principal":"*",
              "Action":"s3:GetObject",
              "Resource":"arn:aws:s3:::infosec-lambda-eu-west-1/*"
            }
          ]
        }
      }
    }
  }
}
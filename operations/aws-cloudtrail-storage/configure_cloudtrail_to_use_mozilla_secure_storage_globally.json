{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Deploy a single global CloudTrail configuration enabling all regions in the account to write to the Mozilla AWS Secure CloudTrail Storage System",
  "Metadata":{
    "Source":"https://github.com/mozilla/security/tree/master/operations/aws-cloudtrail-storage"
  },
  "Resources":{
    "CloudTrail":{
      "Type":"AWS::CloudTrail::Trail",
      "Properties":{
        "S3BucketName":"mozilla-cloudtrail-logs",
        "SnsTopicName":"arn:aws:sns:us-west-2:088944123687:MozillaCloudTrailLogs",
        "IsLogging":true,
        "IncludeGlobalServiceEvents":true,
        "IsMultiRegionTrail":true
      }
    }
  }
}